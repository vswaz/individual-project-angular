extends layout

block content
  .row.banner
    .col-12
      h1= title
  .row
    .col-12.col-md-8
      each book in books 
        .card
          .card-block 
            a(href = `/books/${book._id}`)
              h4 #{book.title} 
              small &nbsp;
            p.author= book.author
            